.container {
  /* background-color: #666;   */
}

.bg {
  position: fixed;
  z-index: 0;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.container .pk-header{
  /* margin: 148rpx auto 80rpx; */
  margin: 20rpx auto 80rpx;
  width: 400rpx;
  /* 玄学：.bg 可能会覆盖 pk-header .title */
  position: relative;
}

/* pk 头部信息 */
.pk-header .title {
  text-align: center;
  font-size: 60rpx;
  color: #fff;
  position: relative;
}

.pk-header .title .shine-star {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  height: 100%;
  width: 40rpx;
}

.shine-star.shine-star-left {
  left: 0;
}

.shine-star.shine-star-right {
  right: 0;
}

.pk-header .passed-time {
  text-align: center;
  opacity: 0.6;
  font-size: 28rpx;
  color: #fff;
  height: 40rpx;
  line-height: 40rpx;
  margin-top: 24rpx;
}

/* pk 卡片信息 */
.pk-card {
  margin: 0 50rpx;
  background-color: #fff;
  position: relative;
  border-radius: 24rpx;
}

.pk-card .pk-card-title {
  text-align: center;
  position: absolute;
  left: 50%;
  top: 0;
  transform: translate(-50%, -50%);
  width: 290rpx;
  height: 50rpx;
  line-height: 50rpx;
  color: #fff;
  font-size: 26rpx;
  background-size: 100% 100%;
  background-image: url("data:image/png;base64,")
}

.pk-card .pk-card-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 80rpx 40rpx;
}

.pk-card .pk-card-bg {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 104rpx;
}

.pk-title {
  margin-top: -80rpx;
}

.pk-user {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}

.pk-user image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 40rpx;
}

.pk-user .current-user {
  border: 16rpx #123e83 solid;
}

.pk-user .opponent-user {
  border: 16rpx #e5020a solid;
}

.pk-user .pk-user-name {
  font-size: 28rpx;
  color: #231916;
  margin-bottom: 6rpx;
}

.pk-user .pk-user-record {
  opacity: 0.5;
  font-size: 24rpx;
  color: #231916;
}

/* 游戏规则 */
.pk-rule {
  position: relative;
  text-align: center;
  height: 40rpx;
  line-height: 40rpx;
  color: #fff;
  font-size: 28rpx;
  margin-top: 84rpx;
}

.pk-rule .text-red {
  color: #e5020a;
}

.bottom-guide {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 324rpx;
  /* background-size: 100% 100; */
  /* background-image: url('../../images/pk-loading/bottom-guide.png'); */
}