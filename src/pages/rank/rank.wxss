  border-radius: 288rpx;
  background-color: #cccccc;
}

.top-three-name{
  width: 216rpx;
  height: 40rpx;
  font-size: 28rpx;
  color: #000000;
  display: flex;
  justify-content: center;
}

.top-three-score{
  width: 216rpx;
  height: 66rpx;
  font-size: 48rpx;
  color: #000000;
  display: flex;
  justify-content: center;
}

