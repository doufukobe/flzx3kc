/* pages/rank/rank.wxss */
.img-wrapper {
  width: 100%;
  height: 470rpx;
  position: relative;
  text-align: center;
}

/** banner 背景 */
.img-wrapper .bg {
   width: 100%;
   height: 100%;
}

/** 奖杯 */
.img-wrapper .champion {
  position: absolute;
  width: 222rpx;
  height: 202rpx;
  top: 40rpx;
  left: 50%;
  /* 模拟器有 bug，使用 translate 不行 */
  transform: translateX(-54%);
}

/** top three 背景 */
.img-wrapper .rank-top-bg {
  width: 100%;
  height: 440rpx;
  position: absolute;
  top: 470rpx;
  background: #eeeeee
}

.toprank-wrapper .top-three-bg {
  width: 650rpx;
  height: 600rpx;
  position: absolute;
  top: 270rpx;
  left: 50%;
  /* 模拟器有 bug，使用 translate 不行 */
  transform: translateX(-50%);
}

/** top three container */
.top-three-rank {
  display: flex;
  height: 264rpx;
  width: 650rpx;
  position: absolute;
  top: 410rpx;
  justify-content: space-between;
  left: 50%;
  /* 模拟器有 bug，使用 translate 不行 */
  transform: translateX(-50%);
}

.top-three-rank .top-three-user{
  width: 216rpx;
  height: 264rpx;
  display: flex;
  align-items: center;
}

.top-three-avatar-wrapper {
  width: 144rpx;
  height: 160rpx;
}

.top-three-avatar{
  width: 144rpx;
