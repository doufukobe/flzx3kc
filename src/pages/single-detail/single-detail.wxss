/* pages/single-detail/single-detail.wxss */
.img-wrapper {
  width: 100%;
  height: 570rpx;
  position: relative;
  text-align: center;
}

.img-wrapper .level-prompt {
  position: absolute;
  left: 50%;
  top: 0;
  transform: translateX(-50%);
  font-size: 32rpx;
  color: #fff;
  width: 240rpx;
  height: 40rpx;
  background-size: 100% 100%;
  background-image: url("data:image/png;base64,")
}

.img-wrapper .bg-img {
  width: 100%;
  height: 100%;
}

.img-wrapper .idiom-img {
  position: absolute;
  width: 480rpx;
  height: 320rpx;
  top: 50%;
  left: 50%;
  /* 模拟器有 bug，使用 translate 不行 */
  transform: translateX(-50%) translateY(-50%);
}

/* 按钮部分 */
.operation-wrapper {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 0 76rpx;
}

.operation-wrapper .operation-item {
  width: 186rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  text-align: center;
  color: #fff;
  border-radius: 200rpx;
}

.operation-wrapper .operation-prompt {
  background-color: #997A56;
}

.operation-wrapper .operation-help {
  background-color: #090909;
}

.operation-wrapper .operation-skip {
  background-color: #63492A;
}

/* 输入成语部分 */
.idiom-input-fields {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 60rpx 144rpx;
}

.idiom-input-fields .idiom-character {
  width: 108rpx;
  height: 108rpx;
  line-height: 108rpx;
  text-align: center;
  font-size: 56rpx;
  color: #997A56;
  border: 2rpx solid #997A56;
  box-sizing: border-box;
}

/* 选词部分 */
.character-selection {
  margin: 64rpx 25rpx;
}

.character-selection .character-item {
  float: left;
  width: 12.5%;
}

.character-selection .character-item .character-content {
  width: 84rpx;
  height: 84rpx; 
  margin: 4rpx;
  line-height: 84rpx; 
  text-align: center;
  border: 2rpx solid #997A56;
  box-sizing: border-box;
}

/* 吸底图片 */
.fixed-download-bg {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 500rpx;
}