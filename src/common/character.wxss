/* 选词部分 */
.character-selection {
  margin: 64rpx 25rpx;
  overflow: hidden;
  position: relative;
  z-index: 1;
}

.character-selection .character-item {
  float: left;
  width: 12.5%;
  background-size: 100% 100%;
  background-image: url("data:image/png;base64,");
}

.character-selection .character-item .character-content {
  width: 80rpx;
  height: 80rpx; 
  margin: 4rpx;
  line-height: 80rpx; 
  text-align: center;
  border: 2rpx solid #997A56;
  box-sizing: border-box;
  color: #997A56;
  font-weight: 100;
}

.character-selection .character-item  .character-content.disabled {
   opacity: 0.2; 
}

.character-selection .character-item .character-content.select {
  background-color: #997A56;
  color: #fff;
  transition: all 0.5s ease-out;
}

.character-selection .character-item .character-content.fade-out {
  opacity: 0;
}